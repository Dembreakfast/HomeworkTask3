<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/favourite_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/favourite_clip"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/favourite_button"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30dp"
        android:text="Cat"
        />
    <TextView
        android:id="@+id/dog_friendly"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/favourite_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18dp"
        android:text=""
        />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="25dp"
        android:background="@drawable/bengal"


        />

    <TextView
        android:id="@+id/description"
        android:layout_margin="5dp"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:text="This is where the description for the cat is, however in this case there is no description for the cat."
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo" />
    <TextView
        android:id="@+id/temper_label"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18dp"
        android:text="Temperament"

        />

    <TextView
        android:id="@+id/temper"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toEndOf="@id/temper_label"
        android:textSize="18dp"
        android:text="We don't know the temperament of this cat."
        />
    <TextView
        android:id="@+id/origin_label"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/temper"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18dp"
        android:text="Origins"
        />
    <TextView
        android:id="@+id/origin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/temper"
        app:layout_constraintStart_toEndOf="@id/origin_label"
        android:textSize="18dp"
        android:text="We don't this cat's origins"
        />
    <TextView
        android:id="@+id/lifespan"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/origin"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18dp"
        android:text="We don't know the lifespan of this cat"
        />

    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15dp"
        android:text="https://en.wikipedia.org/wiki/cat"
        />

</androidx.constraintlayout.widget.ConstraintLayout>